{
  "name": "code",
  "title": "快速编解码工具",
  "description": "快速编解码工具",
  "icon": "command-icon.png",
  "author": "Hootrix",
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "code",
      "description": "编解码工具",
      "mode": "view",
      "arguments": [
        {
          "name": "query",
          "placeholder": "输入编解码内容",
          "type": "text",
          "required": false
        }
      ]
    }
  ],
  "preferences": [
    {
      "name": "binaryPath",
      "title": "二进制文件路径",
      "description": "请输入code.bin文件的完整路径（必填）",
      "type": "textfield",
      "required": true,
      "default": ""
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.55.2",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "^20.5.6",
    "@types/react": "^18.2.21",
    "eslint": "^8.48.0",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint"
  }
}
